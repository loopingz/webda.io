{
  "name": "@webda/mongo",
  "version": "4.0.0-beta.3",
  "description": "Implements Mongo DB on webda",
  "keywords": [
    "mongo",
    "webda"
  ],
  "author": "Remi Cattiau <remi@cattiau.com>",
  "repository": "git://github.com/loopingz/webda.io.git",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "webda build",
    "build:watch": "webda build --watch",
    "pretest": "npm run build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "c8 mocha",
    "format": "prettier --check src/**/*",
    "format:fix": "prettier --write src/**/*"
  },
  "dependencies": {
    "@webda/core": "^4.0.0-beta.2",
    "@webda/ql": "^4.0.0-beta.2",
    "mongodb": "^6.0.0"
  },
  "files": [
    "lib",
    "test",
    "webda.module.json"
  ],
  "c8": {
    "report-dir": "./reports",
    "reporter": [
      "html",
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "homepage": "https://webda.io",
  "publishConfig": {
    "access": "public"
  },
  "webda": {
    "namespace": "Webda"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.3.2",
    "@types/node": "20.0.0",
    "@webda/shell": "^4.0.0-beta.3",
    "tsx": "^4.17.0"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "nx": {
    "implicitDependencies": [
      "@webda/core",
      "@webda/shell"
    ]
  },
  "license": "LGPL-3.0-only"
}