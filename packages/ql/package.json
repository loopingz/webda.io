{
  "name": "@webda/ql",
  "version": "4.0.0-beta.1",
  "description": "WebdaQL module",
  "keywords": [
    "webda"
  ],
  "author": "Remi Cattiau <remi@cattiau.com>",
  "repository": "git://github.com/loopingz/webda.io.git",
  "main": "lib/query.js",
  "typings": "lib/query.d.ts",
  "scripts": {
    "build": "tsc-esm",
    "grammar": "antlr4ts -visitor src/WebdaQLLexer.g4 src/WebdaQLParser.g4 && yarn run lint:fix",
    "pretest": "npm run build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "c8 mocha --recursive --exit --timeout=30000 'src/*.spec.ts'",
    "test:debug": "mocha --recursive --exit --no-timeouts 'src/*.spec.ts'",
    "format": "prettier --check src/**/*",
    "format:fix": "prettier --write src/**/*"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.3.2",
    "@types/node": "18.19.0",
    "@webda/tsc-esm": "^4.0.0-beta.1",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "c8": "^9.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "sinon": "^17.0.0",
    "typescript": "^5.6.2",
    "tsx": "^4.17.0"
  },
  "files": [
    "lib"
  ],
  "c8": {
    "report-dir": "./reports",
    "reporter": [
      "html",
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts",
      "src/WebdaQL*"
    ],
    "excludeNodeModules": true
  },
  "homepage": "https://webda.io",
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "implicitDependencies": [
      "@webda/workout"
    ]
  },
  "webda": {
    "namespace": "Webda"
  },
  "type": "module",
  "engines": {
    "node": ">=18.19.0"
  }
}
