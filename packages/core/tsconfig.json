{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./lib",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declarationMap": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules"]
}
