{
  "name": "@webda/kubernetes",
  "version": "3.2.0",
  "description": "Kubernetes Helpers",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc-esm",
    "build:module": "webda build",
    "build:watch": "webda build --watch",
    "pretest": "npm run build",
    "test": "c8 mocha --recursive --exit --timeout=100000 -r ../../node_modules/ts-node/register src/*.spec.ts src/**/*.spec.ts",
    "run": "node core"
  },
  "keywords": [
    "webda-module"
  ],
  "files": [
    "lib",
    "webda.module.json",
    "webda.shell.json",
    "package.json"
  ],
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "@webda/async": "^3.2.0",
    "@webda/core": "^3.7.0"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.3.3",
    "@types/node": "14.6.0",
    "@webda/tsc-esm": "^1.1.0",
    "c8": "^8.0.0",
    "mocha": "^10.0.0",
    "sinon": "^17.0.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.2.0",
    "typescript": "~5.2.2"
  },
  "c8": {
    "report-dir": "./reports",
    "reporter": [
      "html",
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "bugs": {
    "url": "https://github.com/loopingz/webda.io/issues"
  },
  "homepage": "https://github.com/loopingz/webda.io#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loopingz/webda.io.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "webda": {
    "namespace": "Webda"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "nx": {
    "implicitDependencies": [
      "@webda/core",
      "@webda/tsc-esm",
      "@webda/async"
    ]
  }
}