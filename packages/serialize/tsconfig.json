{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "experimentalDecorators": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declarationMap": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "src/**/*.spec.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "experimentalDecorators": false
    }
  }
}