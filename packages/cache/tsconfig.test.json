{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./lib",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules"]
}
