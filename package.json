{
  "name": "webda.io",
  "private": true,
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/json-schema": "^7.0.3",
    "@types/node": "^12.0.0",
    "aws-sdk-mock": "^5.1.0",
    "commitlint": "^11.0.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "lerna": "^4.0.0",
    "merge-stream": "^2.0.0",
    "mocha": ">=6.1.4",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "sinon": "^9.0.1",
    "ts-node": "^8.1.0",
    "typedoc": "^0.21.4",
    "typedoc-loopingz-theme": "^1.0.0",
    "typedoc-plugin-loopingz-pages": ">=0.1.0",
    "typedoc-plugin-mermaid": "^1.4.0",
    "typescript": "^4.0.0"
  },
  "author": "loopingz",
  "license": "MIT",
  "resolutions": {
    "@types/node": "^12.0.0"
  },
  "bugs": {
    "url": "https://github.com/loopingz/webda.io/issues"
  },
  "homepage": "https://github.com/loopingz/webda.io#readme",
  "repository": "git://github.com/loopingz/webda.io.git",
  "workspaces": [
    "packages/*",
    "sample-app"
  ],
  "scripts": {
    "webda-module": "lerna run webda-module",
    "build": "lerna run build",
    "test": "lerna run test --ignore @webda/sample-app",
    "new-version": "lerna version --ignore @webda/sample-app --message 'chore(release): publish'",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "lerna:publish": "lerna publish",
    "docs": "yarn docs:typedoc",
    "docs:publish": "yarn docs:typedoc && gh-pages -t -d docs/typedoc",
    "docs:typedoc": "typedoc --packages . --out docs/typedoc"
  },
  "command": {
    "publish": {
      "conventionalCommits": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
