{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2019",
      "DOM"
    ],
    "module": "es2020",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "src/**/*.spec.ts",
    "**/*.d.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "preferTsExts": true,
    "compilerOptions": {
      "experimentalDecorators": false
    },
    "include": [
      "src/**/*.spec.ts"
    ],
    "exclude": [
      "src/models/**/*",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ]
  }
}