{
  "name": "webda.io",
  "private": true,
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/json-schema": "^7.0.8",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.0.0",
    "commitlint": "^16.2.3",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "merge-stream": "^2.0.0",
    "mocha": ">=9.0.2",
    "nyc": "^15.0.1",
    "prettier": "^2.3.2",
    "sinon": "^14.0.0",
    "ts-node": "^10.1.0",
    "typedoc": "~0.21.4",
    "typedoc-loopingz-theme": "~1.1.3",
    "typedoc-plugin-loopingz-pages": "~0.3.1",
    "typedoc-plugin-mermaid": "~1.8.0",
    "typescript": "~4.6.3"
  },
  "resolutions": {
    "typescript": "~4.6.3",
    "colors": "=1.4.0"
  },
  "author": "loopingz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loopingz/webda.io/issues"
  },
  "homepage": "https://github.com/loopingz/webda.io#readme",
  "repository": "git://github.com/loopingz/webda.io.git",
  "workspaces": [
    "packages/*",
    "sample-app"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test --ignore @webda/sample-app",
    "new-version": "lerna run build && lerna version --ignore @webda/sample-app --message 'chore(release): publish'",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "lerna:publish": "lerna publish",
    "docs": "yarn docs:typedoc",
    "docs:publish": "yarn docs:typedoc && gh-pages -t -d .built-docs",
    "docs:typedoc": "typedoc --packages . --out .built-docs",
    "init": "husky install"
  },
  "command": {
    "publish": {
      "conventionalCommits": true
    }
  },
  "webda": {
    "randomLink": "./test.json"
  }
}
