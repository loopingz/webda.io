{
  "name": "@webda/graphql",
  "version": "4.0.0-beta.1",
  "description": "GraphQL endpoint for your Webda Application",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "build": "webda build",
    "pretest": "npm run build",
    "test": "c8 mocha",
    "test:debug": "mocha",
    "new-model": "webda init webda:model",
    "new-service": "webda init webda:service",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --check src/**/*",
    "format:fix": "prettier --write src/**/*",
    "deps:graph": "skott --showCircularDependencies --displayMode=raw -e .ts",
    "codemod": "jscodeshift --parser=ts --extensions=tsx,ts -t ../codemod/current.mjs src"
  },
  "keywords": [
    "webda-module"
  ],
  "files": [
    "lib",
    "webda.module.json",
    "package.json"
  ],
  "dependencies": {
    "@webda/core": "^4.0.0-beta.1",
    "@webda/ql": "^4.0.0-beta.1",
    "@webda/runtime": "^4.0.0-beta.1",
    "graphql": "^16.6.0",
    "graphql-http": "^1.16.0",
    "graphql-ws": "^5.14.2",
    "json-schema": "^0.4.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.3.3",
    "@types/node": "20.0.0",
    "@webda/shell": "^4.0.0-beta.1",
    "c8": "^10.1.2",
    "glob": "^10.0.0",
    "js-beautify": "^1.14.7",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "skott": "^0.35.3",
    "jscodeshift": "^17.0.0",
    "@webda/compiler": "^4.0.0-beta.2"
  },
  "c8": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "report-dir": "./reports",
    "reporter": [
      "html",
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts",
      "test/**/*"
    ]
  },
  "webda": {
    "namespace": "Webda"
  },
  "bugs": {
    "url": "https://github.com/loopingz/webda.io/issues"
  },
  "homepage": "https://github.com/loopingz/webda.io#readme",
  "repository": "git://github.com/loopingz/webda.io.git",
  "license": "LGPL-3.0-only",
  "nx": {
    "implicitDependencies": [
      "@webda/core",
      "@webda/shell"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}