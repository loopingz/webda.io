{
  "name": "@webda/elasticsearch",
  "version": "1.5.2",
  "description": "Webda ElasticSearch implementation",
  "main": "lib/index.js",
  "scripts": {
    "webda-module": "webda module --noCompile",
    "build": "tsc",
    "lint": "prettier --check src/**/*",
    "lint:fix": "prettier --write src/**/*",
    "pretest": "npm run build",
    "test": "nyc mocha --recursive --exit --timeout=100000 -r ../../node_modules/ts-node/register src/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loopingz/webda.io.git"
  },
  "keywords": [
    "webda",
    "modda"
  ],
  "files": [
    "lib",
    "webda.module.json",
    "package.json"
  ],
  "author": "loopingz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loopingz/webda.io/issues"
  },
  "homepage": "https://github.com/loopingz/webda.io#readme",
  "dependencies": {
    "@elastic/elasticsearch": "^7.14.1",
    "@webda/core": "^1.5.2",
    "yaml": "^1.10.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "html",
      "lcov",
      "json",
      "text"
    ],
    "report-dir": "./reports",
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.1.2",
    "@types/node": "14.0.0",
    "sinon": "^12.0.1"
  }
}
