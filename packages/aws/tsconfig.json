{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "./lib",
    "strict": false,
    "strictPropertyInitialization": false,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "preferTsExts": true,
    "compilerOptions": {
      "experimentalDecorators": true
    }
  }
}