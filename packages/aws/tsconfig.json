{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2019", "DOM"],
    "module": "commonjs",
    "outDir": "./lib",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "preferTsExts": true,
    "compilerOptions": {
      "experimentalDecorators": true
    }
  }
}
