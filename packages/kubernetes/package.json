{
  "name": "@webda/kubernetes",
  "version": "4.0.0-beta.1",
  "description": "Kubernetes Helpers",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc-esm",
    "build:module": "webda build",
    "build:watch": "webda build --watch",
    "pretest": "npm run build",
    "test": "c8 mocha",
    "test:debug": "mocha --no-timeouts",
    "run": "node core",
    "format": "prettier --check src/**/*",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format:fix": "prettier --write src/**/*"
  },
  "keywords": [
    "webda-module"
  ],
  "files": [
    "lib",
    "webda.module.json",
    "webda.shell.json",
    "package.json"
  ],
  "dependencies": {
    "@kubernetes/client-node": "^0.21.0",
    "@webda/async": "^4.0.0-beta.1",
    "@webda/core": "^4.0.0-beta.1"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.3.3",
    "@types/node": "20.0.0",
    "@webda/tsc-esm": "^4.0.0-beta.1",
    "c8": "^10.1.2",
    "mocha": "^10.0.0",
    "sinon": "^19.0.2",
    "source-map-support": "^0.5.19",
    "tsx": "^4.17.0"
  },
  "c8": {
    "report-dir": "./reports",
    "reporter": [
      "html",
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "bugs": {
    "url": "https://github.com/loopingz/webda.io/issues"
  },
  "homepage": "https://github.com/loopingz/webda.io#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loopingz/webda.io.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "webda": {
    "namespace": "Webda"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "nx": {
    "implicitDependencies": [
      "@webda/core",
      "@webda/tsc-esm",
      "@webda/async"
    ]
  }
}