{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "DOM", "ESNext.Decorators"],
    "module": "es2020",
    "outDir": "./lib",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules"]
}
