{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declarationMap": true,
    "useDefineForClassFields": false,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "src/**/*.spec.ts"]
}
