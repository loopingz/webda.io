{
  "name": "@webda/mongo",
  "version": "2.4.2",
  "description": "Implements Mongo DB on webda",
  "keywords": [
    "mongo",
    "webda"
  ],
  "author": "Remi Cattiau <remi@cattiau.com>",
  "repository": "git://github.com/loopingz/webda.io.git",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "webda build",
    "build:watch": "webda build --watch",
    "pretest": "npm run build",
    "lint": "prettier --check src/**/*",
    "lint:fix": "prettier --write src/**/*",
    "test": "c8 mocha --recursive --exit --timeout=100000 src/**/*.spec.ts src/*.spec.ts"
  },
  "dependencies": {
    "@webda/core": "^2.4.2",
    "mongodb": "^5.0.1"
  },
  "files": [
    "lib",
    "test",
    "webda.module.json"
  ],
  "c8": {
    "report-dir": "./reports",
    "reporter": [
      "html",
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "homepage": "https://webda.io",
  "publishConfig": {
    "access": "public"
  },
  "webda": {
    "namespace": "Webda"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.3.2",
    "@types/node": "14.6.0",
    "@webda/shell": "^2.4.2"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "nx": {
    "implicitDependencies": [
      "@webda/core",
      "@webda/shell"
    ]
  }
}
