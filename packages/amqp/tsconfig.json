{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "./lib",
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts"
  ]
}