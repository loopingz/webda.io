{
  "name": "@webda/mongo",
  "version": "1.6.0-beta.3",
  "description": "Implements Mongo DB on webda",
  "keywords": [
    "mongo",
    "webda"
  ],
  "author": "Remi Cattiau <remi@cattiau.com>",
  "repository": "git://github.com/loopingz/webda.io.git",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "webda build",
    "lint": "prettier --check src/**/*",
    "lint:fix": "prettier --write src/**/*",
    "test": "nyc mocha --recursive --exit --timeout=100000 -r ../../node_modules/ts-node/register src/**/*.spec.ts src/*.spec.ts"
  },
  "dependencies": {
    "@webda/core": "^1.6.0-beta.3",
    "mongodb": "^4.1.2"
  },
  "files": [
    "lib",
    "test",
    "webda.module.json"
  ],
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "report-dir": "./reports",
    "reporter": [
      "html",
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "homepage": "https://webda.io",
  "publishConfig": {
    "access": "public"
  },
  "webda": {
    "namespace": "Webda"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.2.0",
    "@webda/shell": "^1.6.0-beta.3",
    "@types/node": "14.0.0"
  }
}
