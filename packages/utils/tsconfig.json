{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./lib",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "experimentalDecorators": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["../../node_modules/@types"],
    "skipLibCheck": true,
    "declarationMap": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"],
  "ts-node": { "compilerOptions": { "experimentalDecorators": false } }
}
