{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2019", "DOM"],
    "module": "ESNext",
    "outDir": "./lib",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "preferTsExts": true,
    "compilerOptions": {
      "experimentalDecorators": true,
      "declarationMap": true
    },
    "include": ["src/**/*.spec.ts"],
    "exclude": ["src/models/**/*"]
  }
}
