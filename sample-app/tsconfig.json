{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "./lib",
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declarationMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "experimentalDecorators": false
    }
  }
}